# GATI Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ====================================
# AI Configuration (REQUIRED)
# ====================================
# Hugging Face API Key - Get yours at: https://huggingface.co/settings/tokens
# Create a fine-grained token with "Make calls to Inference Providers" permission
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ====================================
# Admin Authentication (REQUIRED)
# ====================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
ADMIN_EMAIL=admin@gati.gov.in

# Session secret - Generate a random 64+ character string
SESSION_SECRET=your_random_64_character_secret_here

# ====================================
# ML Backend (OPTIONAL)
# ====================================
ML_API_URL=http://localhost:8000
NEXT_PUBLIC_ML_API_URL=http://localhost:8000
